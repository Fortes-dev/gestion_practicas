<BorderPane maxHeight="660.0" maxWidth="501.0" minHeight="660.0" minWidth="501.0" prefHeight="660.0" prefWidth="501.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.gestion.practicas.application.LoginController">
   <center>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="10.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="230.0" fitWidth="230.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../img/logocesur.png" />
               </image>
            </ImageView>
            <VBox spacing="10.0">
               <children>
                  <Label alignment="TOP_LEFT" stylesheets="@../../../../../styles/styles.css" text="Usuario" textFill="#0f52ba">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="userField" stylesheets="@../../../../../styles/styles.css" />
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label stylesheets="@../../../../../styles/styles.css" text="Contraseña" textFill="#0f52ba">
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField" stylesheets="@../../../../../styles/styles.css" />
               </children>
            </VBox>
            <HBox>
               <children>
                  <Hyperlink fx:id="linkPassword" onAction="#linkPasswordHandler" stylesheets="@../../../../../styles/styles.css" text="¿Has olvidado tu contraseña?">
                     <padding>
                        <Insets bottom="20.0" top="8.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Hyperlink>
                  <Button fx:id="btnAceptar" alignment="TOP_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnAceptarHandler" style="-fx-background-color: #0F52BA;" stylesheets="@../../../../../styles/styles.css" text="Aceptar" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="20.0" left="72.0" top="5.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="100.0" left="100.0" right="100.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <ImageView cache="true" fitHeight="150.0" fitWidth="501.0" pickOnBounds="true">
         <image>
            <Image url="@../../../../../img/decoracion.jpg" />
         </image>
      </ImageView>
   </top>
</BorderPane>
